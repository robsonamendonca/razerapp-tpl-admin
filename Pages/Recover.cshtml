@page "~/Recuperar"
@model MyRazorApp.Pages.Pages_Recover
@{
    Layout = "Shared/_LayoutAuth.cshtml";
    
    ViewData["Title"] = "Recuperar a Senha";
}

<form class="form-signin" method="POST" action="">
    <img class="mb-4" src="./assets/img/seu_logo_aqui.png" alt="Celke" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Recuperar a senha</h1>
        <div class="form-group">
    <label>E-mail</label>
    <input name="email" type="email" class="form-control" placeholder="Digite o e-mail cadastrado" value=""> 
    </div>
    <input name="RecupUserLogin" type="submit" class="btn btn-lg btn-primary btn-block" value="Recuperar">
    <p class="text-center">Lembrou? <a asp-page="Login">Clique aqui</a> para logar</p>
</form>
